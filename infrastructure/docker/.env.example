# XOR Trading Platform - Docker Environment Configuration

# Project
COMPOSE_PROJECT_NAME=xor-trading

# Backend
BACKEND_PORT=8000
BACKEND_REPLICAS=1
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=change-this-secret-key-in-production
JWT_SECRET_KEY=change-this-jwt-secret-key-in-production
ENCRYPTION_KEY=change-this-32-byte-encryption-key-xxxxxxxx

# Database (PostgreSQL)
POSTGRES_USER=xor_user
POSTGRES_PASSWORD=change-this-db-password
POSTGRES_DB=xor_trading
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend
FRONTEND_PORT=3000

# Strategy Engine
STRATEGY_ENGINE_replicas=1
